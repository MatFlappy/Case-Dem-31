<Window x:Class="Case_Dem_31.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Case_Dem_31"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <!--Левая часть окна-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="Авторизация" FontSize="36"
                Grid.Column="1" Grid.Row="1"/>
            
            <TextBlock FontSize="24"
                Text="Логин" Grid.Column="1" Grid.Row="2"/>
            
            <TextBox x:Name="usernameTextBox"
                Grid.Column="1" Grid.Row="3"/>

            <TextBlock Text="Пароль" FontSize="24"
                       Grid.Column="1" Grid.Row="4"/>
            
            <PasswordBox x:Name="userpasswordBox"
                Grid.Column="1" Grid.Row="5"/>
            
            <Button Background="#3c3c3c" FontSize="16"
                    Foreground="White"
                    Content="Войти"
                Grid.Column="1" Grid.Row="7" Click="Button_Click"/>
        </Grid>
        <!--Правая часть окна-->
        <Grid Grid.Column="1" Background="#3c3c3c">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="Нет аккаунта?" FontSize="36" Foreground="White"
                Grid.Column="1" Grid.Row="1"/>
            
            <TextBlock Text="Тест" Foreground="White"
                Grid.Column="1" Grid.Row="3"/>
            <Button 
                Foreground="White" 
                FontSize="16" Background="Transparent"
                BorderBrush="White"
                Content="Зарегистрироваться" Grid.Column="1" Grid.Row="5" Click="Button_Click_1"/>
        </Grid>
    </Grid>
</Window>
